@model DotNetCoreSDK.Models.Business.BusinessCreateReturnResponse

<div class="modal-header edit-modal-header">
    <button type="button" class="close" data-dismiss="modal"></button>
    <h4 id="form_heading" class="modal-title">
        Reponse Status
    </h4>
</div>
<div class="modal-body edit-modal-body white_bg">
    @if (Model != null && Model.StatusCode > 0)
    {
        <table class="responsive">
            <tr><td class="spacer10"></td></tr>
            <tr>
                <td class="labelName"><label class="control-label">Status Code:</label></td>
                <td class="fieldName" style="top:4px;">@Model.StatusCode</td>
            </tr>
            <tr><td class="spacer10"></td></tr>
            <tr>
                <td class="labelName"><label class="control-label">Status Name:</label></td>
                <td class="fieldName" style="top:4px;">@Model.StatusName</td>
            </tr>
            <tr><td class="spacer10"></td></tr>
            <tr>
                <td class="labelName"><label class="control-label">Status Message:</label></td>
                <td class="fieldName" style="top:4px;">@Model.StatusMessage</td>
            </tr>
        </table>
    }

    @if (Model != null && Model.StatusCode == 200)
    {
        <div class="spacer15"> </div>
        <h3 style="font-size:medium;font-weight:600">Success Records</h3>
        <div>
            <table class="table table-bordered">
                <thead class="thead-inverse">
                    <tr>
                        <th>Business Id</th>
                        <th>IsEIN</th>
                        <th>EINorSSN</th>
                        <th>BusinessNm</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.BusinessId</td>
                        <td>@Model.IsEIN</td>
                        <td>@Model.EINorSSN</td>
                        <td>@Model.BusinessNm </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    @if (Model != null && Model.Errors != null && Model.Errors.Count > 0)
    {
        <div class="spacer15"> </div>
        <h3 style="font-size:medium;font-weight:600">Error Records</h3>
        <div>
            <table class="table table-bordered">
                <thead class="thead-inverse">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Message</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Errors)
                    {

                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Message</td>
                            <td>@item.Type</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }

</div>

<div class="modal-footer edit-modal-footer mTopNo">
    @if (Model != null && Model.StatusCode == 200)
    {
        <div class="taC">
            <button type="button" class="btn btn_md btn_second" data-dismiss="modal" onclick="location.href='@Url.Action("GetBusinessList", "Business")'">
                Okay
            </button>
        </div>

    }
    else
    {
        <div class="taC">
            <button type="button" class="btn btn_md btn_second" data-dismiss="modal">
                Okay
            </button>
        </div>
    }
</div>


